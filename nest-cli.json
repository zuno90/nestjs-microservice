{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/orders/src",
    "monorepo": true,
    "root": "apps/orders",
    "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "apps/orders/tsconfig.app.json"
    },
    "projects": {
        "auth": {
            "type": "application",
            "root": "apps/auth",
            "entryFile": "main",
            "sourceRoot": "apps/auth/src",
            "compilerOptions": {
                "tsConfigPath": "apps/auth/tsconfig.app.json"
            }
        },
        "orders": {
            "type": "application",
            "root": "apps/orders",
            "entryFile": "main",
            "sourceRoot": "apps/orders/src",
            "compilerOptions": {
                "tsConfigPath": "apps/orders/tsconfig.app.json"
            }
        },
        "billing": {
            "type": "application",
            "root": "apps/billing",
            "entryFile": "main",
            "sourceRoot": "apps/billing/src",
            "compilerOptions": {
                "tsConfigPath": "apps/billing/tsconfig.app.json"
            }
        },
        "mail": {
            "type": "application",
            "root": "apps/mail",
            "entryFile": "main",
            "sourceRoot": "apps/mail/src",
            "compilerOptions": {
                "assets": ["apps/mail/templates/**/*"],
                "watchAssets": true,
                "tsConfigPath": "apps/mail/tsconfig.app.json"
            }
        },
        "common": {
            "type": "library",
            "root": "libs/common",
            "entryFile": "index",
            "sourceRoot": "libs/common/src",
            "compilerOptions": {
                "tsConfigPath": "libs/common/tsconfig.lib.json"
            }
        }
    }
}
